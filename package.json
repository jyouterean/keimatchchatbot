    "papaparse": "^5.4.1",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "proper-lockfile": "^4.1.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.14.12",
    "@types/papaparse": "^5.3.14",
    "@types/pino": "^7.0.4",
    "@types/proper-lockfile": "^4.1.4",
