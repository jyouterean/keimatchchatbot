# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# LINE Messaging API
LINE_CHANNEL_SECRET=your_line_channel_secret_here
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here

# Spreadsheet Source (at least one must be set)
SHEET_CSV_URL=
SHEET_XLSX_PATH=

# OpenAI Models (optional, defaults shown)
EMBEDDING_MODEL=text-embedding-3-small
CHAT_MODEL=gpt-4o-mini

# Similarity Threshold (optional, default: 0.84)
SIM_THRESHOLD=0.84

# Server Port (optional, default: 3000)
PORT=3000

# Admin API Protection (optional)
ADMIN_TOKEN=

# Long Text Q&A Support (optional)
MAX_TOKENS=2000                    # Maximum tokens for generated answers (default: 2000)
MAX_QA_CONTEXT_LENGTH=3000         # Maximum length for Q&A context in RAG mode (default: 3000)

# Alternative Data Sources (optional, priority: QA_JSON_PATH > QA_JSON_URL > SHEET_CSV_URL > SHEET_XLSX_PATH)
QA_JSON_PATH=                    # Path to local JSON file
QA_JSON_URL=                     # URL to JSON API endpoint
